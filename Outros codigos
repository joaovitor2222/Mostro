<body>
    <h1>Monster World</h1>
    <p>Controle seu personagem com o joystick abaixo!</p>

    <canvas id="gameCanvas"></canvas>
    
    <!-- Joystick container -->
    <div class="joystick-container">
        <div class="joystick" id="joystick"></div>
    </div>

    <script src="game.js"></script>
